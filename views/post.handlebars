<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date createdAt}}</p>
  {{#if logged_in}}
    <form class="form comment-form">
      <div class="form-group">
        <label for="comment">Leave a comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  {{else}}
    <p><a href="/login">Log in</a> to leave a comment.</p>
  {{/if}}
  {{#each comments as |comment|}}
    <div class="comment">
      <p>{{comment.content}}</p>
      <p>Comment by {{comment.user.username}} on {{format_date comment.createdAt}}</p>
    </div>
  {{/each}}
</div>

<script src="./js/post.js"></script>

