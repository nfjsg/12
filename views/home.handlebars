
<div class="row">
  <div class="col-md-12">
    <h2>Welcome to the Tech Blog!</h2>
    <p>Explore and read blog posts from fellow developers.</p>
    {{#if logged_in}}
      <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
    {{else}}
      <a href="/login" class="btn btn-primary">Log In</a>
    {{/if}}
  </div>
</div>

{{#if posts.length}}
  <div class="row mt-4">
    <div class="col-md-12">
      <h3>Latest Blog Posts:</h3>
      {{#each posts as |post|}}
        <div class="post">
          <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
          <p>By {{post.User.name}} on {{format_date post.createdAt}}</p>
          <p>{{post.content}}</p>
          <a href="/post/{{post.id}}" class="btn btn-primary">Read More</a>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <div class="row mt-4">
    <div class="col-md-12">
      <p>No blog posts available.</p>
    </div>
  </div>
{{/if}}
