
{{#if logged_in}}
  <div class="row">
    <div class="col-md-12">
      <h2>Welcome to Your Dashboard, {{name}}!</h2>
    </div>
  </div>

  {{#if posts.length}}
    <div class="row mt-4">
      <div class="col-md-12">
        <h3>Your Blog Posts:</h3>
        {{#each posts as |post|}}
          <div class="post">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            <p>{{format_date post.createdAt}}</p>
            <p>{{post.content}}</p>
            <div class="actions">
              <a href="/post/edit/{{post.id}}" class="btn btn-primary">Edit</a>
              <button class="btn btn-danger delete-post" data-id="{{post.id}}">Delete</button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  {{else}}
    <div class="row mt-4">
      <div class="col-md-12">
        <p>You haven't created any blog posts yet.</p>
        <a href="/post/new" class="btn btn-primary">Create New Post</a>
      </div>
    </div>
  {{/if}}

  <script src="/js/dashboard.js"></script>
{{else}}
  <div class="row">
    <div class="col-md-12">
      <p>Please log in to view your dashboard.</p>
    </div>
  </div>
{{/if}}
